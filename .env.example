# Количество резервных лог файлов
LOG_BACKUP_COUNT=5

# ====== НАСТРОЙКИ БЕЗОПАСНОСТИ ======
# Максимальное количество запросов в минуту на пользователя
RATE_LIMIT_PER_MINUTE=10

# Таймаут для запросов к внешним API в секундах
API_TIMEOUT=30

# ====== НАСТРОЙКИ УВЕДОМЛЕНИЙ ======
# Включить ежедневные отчеты (true/false)
DAILY_REPORTS_ENABLED=true

# Время отправки ежедневного отчета (HH:MM)
DAILY_REPORT_TIME=09:00

# Включить уведомления о новых VIP клиентах (true/false)
VIP_NOTIFICATIONS_ENABLED=true

# Включить уведомления о критическом ROI (true/false)
ROI_ALERTS_ENABLED=true

# ====== НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ ======
# Размер батча для обработки лидов
BATCH_SIZE=100

# Задержка между запросами к API Яндекс.Метрики (секунды)
API_REQUEST_DELAY=1

# Время жизни кеша в секундах (по умолчанию 1 час)
CACHE_TTL=3600

# ====== НАСТРОЙКИ РЕЗЕРВНОГО КОПИРОВАНИЯ ======
# Включить автоматическое резервное копирование Google Sheets (true/false)
AUTO_BACKUP_ENABLED=true

# Частота создания резервных копий (daily/weekly/monthly)
BACKUP_FREQUENCY=daily

# Максимальное количество резервных копий
MAX_BACKUP_COUNT=7
