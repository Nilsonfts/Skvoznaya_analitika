{
  "name": "Telegram Bot для Маркетинговой Аналитики",
  "description": "Профессиональный Telegram-бот для автоматизации маркетинговой аналитики. Интегрируется с Google Sheets, Яндекс.Метрикой для анализа эффективности каналов привлечения.",
  "tags": [
    "telegram",
    "bot",
    "analytics",
    "marketing", 
    "google-sheets",
    "yandex-metrika",
    "python",
    "crm"
  ],
  "repository": "https://github.com/Nilsonfts/Skvoznaya_analitika",
  "plugins": [
    {
      "id": "postgresql"
    },
    {
      "id": "redis"
    }
  ],
  "buildCommand": "cd telegram-bot && pip install -r requirements.txt",
  "startCommand": "cd telegram-bot && python bot.py",
  "variables": {
    "BOT_TOKEN": {
      "description": "Токен Telegram бота от @BotFather",
      "required": true
    },
    "GOOGLE_CREDENTIALS_JSON": {
      "description": "JSON ключ сервисного аккаунта Google API",
      "required": true
    },
    "SPREADSHEET_ID": {
      "description": "ID основной Google таблицы",
      "required": true,
      "default": "1QL1CRY3M9Av-WlDS5gswA2Lq14OPdt0TME_dpwPIuC4"
    },
    "ADMIN_IDS": {
      "description": "ID администраторов Telegram через запятую",
      "required": false,
      "default": "123456789,987654321"
    },
    "REPORT_CHAT_ID": {
      "description": "ID чатов для автоматических отчётов",
      "required": false
    },
    "METRIKA_COUNTER_ID": {
      "description": "ID счётчика Яндекс.Метрики",
      "required": false,
      "default": "101368505"
    },
    "METRIKA_OAUTH_TOKEN": {
      "description": "OAuth токен Яндекс.Метрики",
      "required": false
    },
    "GA_PROPERTY_ID": {
      "description": "ID свойства Google Analytics",
      "required": false
    },
    "USE_POSTGRES": {
      "description": "Использовать PostgreSQL для хранения данных",
      "required": false,
      "default": "false"
    },
    "DEBUG_MODE": {
      "description": "Режим отладки",
      "required": false,
      "default": "false"
    },
    "TIMEZONE": {
      "description": "Часовой пояс",
      "required": false,
      "default": "Europe/Moscow"
    },
    "DAILY_REPORT_TIME": {
      "description": "Время ежедневного отчёта (HH:MM)",
      "required": false,
      "default": "09:00"
    }
  }
}
